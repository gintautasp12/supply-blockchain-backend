<%- include('partials/header'); %>

<div class="container">
    <%- include('partials/menu'); %>

    <div class="row mt-3">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div id="status-bar" class="alert invisible" role="alert"></div>

            <div class="card shadow bg-body rounded">
                <div class="card-header">
                    Add new administrator
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" required class="form-control" id="email"
                            placeholder="email@example.com">

                        <label for="email" class="form-label mt-3">Business</label>
                        <select class="form-select" id="business" aria-label="Business">
                            <option selected>Select business</option>

                            <% businesses.forEach(function(business) { %>
                                <option value="<%= business.id %>"><%= business.title %></option>
                            <% }); %>
                        </select>
                    </div>

                    <button id="add-admin-btn" class="btn btn-primary" type="button">
                        <span class="spinner-grow spinner-grow-sm d-none" role="status"
                            aria-hidden="true"></span>
                        <span class="button-text">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<%- include('partials/footer'); %>
